@page
@model ScrumBoard.Pages.UserStories.IndexModel
@{
}
<h1>Dette er UserStories</h1>
<p>Her Kommer listen</p>


    @foreach (var us in @Model.UserStories)
    {
        <div class="card mb-2" style="width: 30rem;">
            <div class="card-header p-2">
                <h5 class="card-title">(@us.Id) @us.Title</h5>
            </div>

            <div class="card-body">
                <p class="card-text">@Model.ShowDescription(us.Description)</p>
            </div>
            
            <div class="card-footer">
                <a class="btn" type="button" asp-page="DeleteUserStory" asp-route-id="@us.Id">
                    <i class="fa fa-trash"></i>
                </a>
                
                <a class="btn" type="button" asp-page="UserStoryDetailed" asp-route-id="@us.Id">
                    <i class="fa fa-info-circle"></i>
                </a>

            </div>
        </div>
    }
